<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_content_color"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/content_toolbar_view" />

    <RelativeLayout
        android:id="@+id/rl_edt_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_toolbar"
        android:layout_marginTop="@dimen/line_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">


        <TextView
            style="@style/font_12_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="修改密码"
            android:textColor="@color/font_gray_dark" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/icon_arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_edt_password"
        android:layout_marginTop="@dimen/line_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">


        <TextView
            style="@style/font_12_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="应用介绍"
            android:textColor="@color/font_gray_dark" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/icon_arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_profile"
        android:layout_marginTop="@dimen/line_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">


        <TextView
            style="@style/font_12_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="缓存清理"
            android:textColor="@color/font_gray_dark" />


        <TextView
            android:id="@+id/tv_cache"
            style="@style/font_12_style"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@+id/img_cache_right"
            android:text=""
            android:textColor="@color/font_gray_dark" />

        <ImageView
            android:id="@+id/img_cache_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/icon_arrow_right" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/font_gray_666666"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>